<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUserActivity"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:background="@drawable/shape_rect01">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="null"
            android:contentDescription="Return"
            android:id="@+id/backBtn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Register User"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/colorWhite"/>

        <ImageButton
            android:id="@+id/gpsBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="null"
            android:contentDescription="Return"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_gps_white"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iconIv"
        android:background="@drawable/shape_circle01"
        android:layout_marginTop="60dp"
        android:src="@drawable/baseline_key_24"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>
    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/iconIv"
        android:id="@+id/profileIv"
        android:layout_centerHorizontal="true"
        app:c_border="true"
        app:c_background_color="@color/colorPrimary"
        app:c_border_width="1dp"
        android:src="@drawable/baseline_person_gray"/>

    <EditText
        android:id="@+id/nameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileIv"
        android:hint="Full Name"
        android:textSize="23sp"
        android:padding="10dp"
        android:drawableStart="@drawable/gray_mail_outline_24"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="textPersonName|textCapWords"
        android:background="@drawable/shape_rect02"/>
    <EditText
        android:id="@+id/phoneEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEt"
        android:hint="Phone Number"
        android:textSize="23sp"
        android:padding="10dp"
        android:drawableStart="@drawable/gray_mail_outline_24"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="phone"
        android:background="@drawable/shape_rect02"/>
    <LinearLayout
        android:id="@+id/addressLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/phoneEt"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/countryEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameEt"
            android:hint="Country"
            android:textSize="23sp"
            android:padding="10dp"
            android:drawableStart="@drawable/gray_mail_outline_24"
            android:drawablePadding="5dp"
            android:layout_margin="5dp"
            android:inputType="textPostalAddress"
            android:layout_weight="1"
            android:background="@drawable/shape_rect02"/>
        <EditText
            android:id="@+id/stateEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameEt"
            android:hint="State"
            android:textSize="23sp"
            android:padding="10dp"
            android:drawableStart="@drawable/gray_mail_outline_24"
            android:drawablePadding="5dp"
            android:layout_margin="5dp"
            android:inputType="textPostalAddress"
            android:layout_weight="1"
            android:background="@drawable/shape_rect02"/>
        <EditText
            android:id="@+id/cityEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameEt"
            android:hint="City"
            android:textSize="23sp"
            android:padding="10dp"
            android:drawableStart="@drawable/gray_mail_outline_24"
            android:drawablePadding="5dp"
            android:layout_margin="5dp"
            android:inputType="textPostalAddress"
            android:layout_weight="1"
            android:background="@drawable/shape_rect02"/>
    </LinearLayout>

    <EditText
        android:id="@+id/addressEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressLl"
        android:hint="Complete address"
        android:textSize="23sp"
        android:padding="10dp"
        android:drawableStart="@drawable/gray_mail_outline_24"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="textPostalAddress|textMultiLine"
        android:background="@drawable/shape_rect02"/>

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressEt"
        android:hint="Email"
        android:textSize="23sp"
        android:padding="10dp"
        android:drawableStart="@drawable/gray_mail_outline_24"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/shape_rect02"/>
    <EditText
        android:id="@+id/passwordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailEt"
        android:hint="Password"
        android:textSize="23sp"
        android:padding="10dp"
        android:drawableStart="@drawable/key_gray"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="textPassword"
        android:background="@drawable/shape_rect02"/>
    <EditText
        android:id="@+id/cPasswordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordEt"
        android:hint="Confirm Password"
        android:textSize="23sp"
        android:padding="10dp"
        android:drawableStart="@drawable/key_gray"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="textPassword"
        android:background="@drawable/shape_rect02"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regiterBtn"
        android:text="Register"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:minWidth="120dp"
        android:layout_below="@+id/cPasswordEt"
        android:textSize="23sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerSellerTv"
        android:layout_margin="5dp"
        android:textSize="25sp"
        android:text="Are you a seller? Register as a seller"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>